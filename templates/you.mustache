{{#you}}
  {{! CURRENT PLAYER STATE }}
  <div>{{name}}: {{loot}}</div>
  {{#artifacts_captured}}
    <span class="card card_{{.}}"></span>
  {{/artifacts_captured}}

  {{! SO MANY CHOICES }}
  <div id="decision">
    {{#joined}}
      <form action="start" method="post">
        <input type="submit" value="" class="start card" />
      </form>
    {{/joined}}
    {{#camp}}<span class="card camp"></span>{{/camp}}
    {{#undecided}}
      <form action="move" method="post">
        <input type="hidden" name="move" value="han" />
        <input type="submit" value="" class="card han" />
      </form>
      <form action="move" method="post">
        <input type="hidden" name="move" value="lando" />
        <input type="submit" value="" class="card lando" />
      </form>
    {{/undecided}}
    {{#han}}<span class="card han"></span>{{/han}}
    {{#lando}}<span class="card lando"></span>{{/lando}}
    {{#won}}<span class="card won"></span>{{/won}}
    {{#lost}}<span class="card lost"></span>{{/lost}}
  </div>
{{/you}}
{{! JOIN GAME IF NOT STARTED YET }}
{{^you}}
{{#game}}
  {{^round}}
  <form action="join" method="post">
    <label for="name">Join this game as:</label>
    <input type="text" name="player" />
    <input type="submit" value="Join" />
  </form>
  {{/round}}
{{/game}}
{{/you}}
